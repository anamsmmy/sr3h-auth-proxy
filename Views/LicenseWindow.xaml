<Window x:Class="MacroApp.Views.LicenseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="تفعيل التطبيق - ماكرو سرعة"
        Height="720" Width="550"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        Icon="../icon.ico"
        FlowDirection="RightToLeft">
    
    <Window.Resources>
        <Style x:Key="PlaceholderTextBox" TargetType="TextBox">
            <Setter Property="MinHeight" Value="44"/>
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#DDD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#212121"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
        </Style>

        <Style x:Key="CompactButton" TargetType="Button">
            <Setter Property="Height" Value="44"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#0D47A1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDBDBD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OTPTextBox" TargetType="TextBox" BasedOn="{StaticResource PlaceholderTextBox}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="MaxLength" Value="6"/>
            <Setter Property="MinHeight" Value="48"/>
            <Setter Property="Padding" Value="12,13"/>
        </Style>
    </Window.Resources>

    <Grid Margin="18,16,18,16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,12">
            <TextBlock Text="ماكرو سرعة فورتنايت" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" Foreground="#2196F3" Margin="0,0,0,2"/>
            <TextBlock Text="تفعيل التطبيق" FontSize="12" HorizontalAlignment="Center" Foreground="#888"/>
        </StackPanel>

        <!-- Activation Type Selection -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="اختر طريقة التفعيل:" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="#212121"/>
            <Border Background="White" CornerRadius="3" Padding="10">
                <StackPanel Orientation="Vertical">
                    <RadioButton x:Name="TrialRadio" Content="فترة تجريبية (7 أيام)" FontSize="11" Margin="0,0,0,5" IsChecked="True" Checked="ActivationType_Changed"/>
                    <RadioButton x:Name="CodeRadio" Content="تفعيل بكود" FontSize="11" Margin="0,0,0,5" Checked="ActivationType_Changed"/>
                    <RadioButton x:Name="TransferRadio" Content="إعادة ربط الجهاز" FontSize="11" Checked="ActivationType_Changed"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Trial Panel -->
        <StackPanel x:Name="TrialPanel" Grid.Row="2" Visibility="Visible" Margin="0,0,0,10">
            <TextBlock Text="البريد الإلكتروني" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="#212121"/>
            <TextBox x:Name="TrialEmailBox" Style="{StaticResource PlaceholderTextBox}" Margin="0,0,0,8" TextAlignment="Right"/>
            <Button x:Name="TrialSendOTPButton" Content="إرسال" Style="{StaticResource CompactButton}" Click="TrialSendOTP_Click" Margin="0,0,0,8"/>
            <TextBlock Text="رمز التحقق" Foreground="#212121" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,6" Visibility="Collapsed" x:Name="TrialOTPLabel"/>
            <TextBox x:Name="TrialOTPBox" Style="{StaticResource OTPTextBox}" Margin="0,0,0,8" Visibility="Collapsed"/>
            <Button x:Name="TrialVerifyButton" Content="تحقق" Style="{StaticResource CompactButton}" Click="TrialVerify_Click" Visibility="Collapsed" Margin="0,0,0,8"/>
            <TextBlock x:Name="TrialStatus" TextWrapping="Wrap" HorizontalAlignment="Center" Visibility="Collapsed" FontSize="11" FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Code Panel -->
        <StackPanel x:Name="CodePanel" Grid.Row="2" Visibility="Collapsed" Margin="0,0,0,10">
            <Grid Margin="0,0,0,8">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="البريد الإلكتروني" Grid.Row="0" Grid.Column="0" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="#212121"/>
                <TextBlock Text="رقم الطلب" Grid.Row="0" Grid.Column="2" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="#212121"/>
                <TextBox x:Name="CodeEmailBox" Grid.Row="1" Grid.Column="0" Style="{StaticResource PlaceholderTextBox}" TextAlignment="Right"/>
                <TextBox x:Name="CodeOrderIdBox" Grid.Row="1" Grid.Column="2" Style="{StaticResource PlaceholderTextBox}" TextAlignment="Right"/>
            </Grid>
            <TextBlock Text="كود التفعيل" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="#212121"/>
            <TextBox x:Name="CodeActivationBox" Style="{StaticResource PlaceholderTextBox}" Margin="0,0,0,8" TextAlignment="Right"/>
            <Button x:Name="CodeSendOTPButton" Content="إرسال" Style="{StaticResource CompactButton}" Click="CodeSendOTP_Click" Margin="0,0,0,8"/>
            <TextBlock Text="رمز التحقق" Foreground="#212121" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,6" Visibility="Collapsed" x:Name="CodeOTPLabel"/>
            <TextBox x:Name="CodeOTPBox" Style="{StaticResource OTPTextBox}" Margin="0,0,0,8" Visibility="Collapsed"/>
            <Button x:Name="CodeVerifyButton" Content="تحقق" Style="{StaticResource CompactButton}" Click="CodeVerify_Click" Visibility="Collapsed" Margin="0,0,0,8"/>
            <TextBlock x:Name="CodeStatus" TextWrapping="Wrap" HorizontalAlignment="Center" Visibility="Collapsed" FontSize="11" FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Transfer Panel -->
        <StackPanel x:Name="TransferPanel" Grid.Row="2" Visibility="Collapsed" Margin="0,0,0,10">
            <TextBlock Text="البريد الإلكتروني" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,6" Foreground="#212121"/>
            <TextBox x:Name="TransferEmailBox" Style="{StaticResource PlaceholderTextBox}" Margin="0,0,0,8" TextAlignment="Right"/>
            <Button x:Name="TransferSendOTPButton" Content="إرسال" Style="{StaticResource CompactButton}" Click="TransferSendOTP_Click" Margin="0,0,0,8"/>
            <TextBlock Text="رمز التحقق" Foreground="#212121" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,6" Visibility="Collapsed" x:Name="TransferOTPLabel"/>
            <TextBox x:Name="TransferOTPBox" Style="{StaticResource OTPTextBox}" Margin="0,0,0,8" Visibility="Collapsed"/>
            <Button x:Name="TransferVerifyButton" Content="تحقق" Style="{StaticResource CompactButton}" Click="TransferVerify_Click" Visibility="Collapsed" Margin="0,0,0,8"/>
            <TextBlock Text="كود التفعيل المفعل" Foreground="#212121" FontSize="11" FontWeight="SemiBold" Margin="0,0,0,6" Visibility="Collapsed" x:Name="TransferCodeLabel"/>
            <TextBox x:Name="TransferCodeBox" Style="{StaticResource PlaceholderTextBox}" Margin="0,0,0,8" Visibility="Collapsed" TextAlignment="Right"/>
            <Button x:Name="TransferCodeVerifyButton" Content="إكمال النقل" Style="{StaticResource CompactButton}" Click="TransferCodeVerify_Click" Visibility="Collapsed" Margin="0,0,0,8"/>
            <TextBlock x:Name="TransferStatus" TextWrapping="Wrap" HorizontalAlignment="Center" Visibility="Collapsed" FontSize="11" FontWeight="SemiBold"/>
        </StackPanel>

        <!-- Footer -->
        <Border Grid.Row="3" Background="White" CornerRadius="3" Padding="10">
            <StackPanel>
                <TextBlock Text="معرف الجهاز:" FontSize="10" Foreground="#AAA" Margin="0,0,0,2"/>
                <TextBlock x:Name="HardwareIdText" FontSize="9" FontFamily="Consolas" Foreground="#666" TextWrapping="Wrap"/>
            </StackPanel>
        </Border>

    </Grid>
</Window>
