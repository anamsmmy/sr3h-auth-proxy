<Window x:Class="MacroApp.Views.MacroSequenceEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="محرر تسلسل الماكرو المتقدم"
        Height="600" Width="800"
        MinHeight="500" MinWidth="700"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,0,0,1"
                Padding="20,15">
            <StackPanel>
                <TextBlock Text="محرر تسلسل الماكرو المتقدم" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Foreground="{StaticResource TextBrush}"/>
                <TextBlock Text="قم بترتيب وتحرير خطوات الماكرو بدقة" 
                           FontSize="12" 
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Tools Panel -->
            <Border Grid.Column="0" 
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="15"
                    Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Text="أدوات الإضافة" 
                               FontSize="14" 
                               FontWeight="SemiBold"
                               Margin="0,0,0,15"/>

                    <Button x:Name="AddLeftDownButton"
                            Content="ضغط يسار"
                            Style="{StaticResource ModernButton}"
                            Click="AddLeftDownButton_Click"
                            Margin="0,0,0,10"/>

                    <Button x:Name="AddLeftUpButton"
                            Content="إفلات يسار"
                            Style="{StaticResource ModernButton}"
                            Click="AddLeftUpButton_Click"
                            Margin="0,0,0,10"/>

                    <Button x:Name="AddRightDownButton"
                            Content="ضغط يمين"
                            Style="{StaticResource ModernButton}"
                            Click="AddRightDownButton_Click"
                            Margin="0,0,0,10"/>

                    <Button x:Name="AddRightUpButton"
                            Content="إفلات يمين"
                            Style="{StaticResource ModernButton}"
                            Click="AddRightUpButton_Click"
                            Margin="0,0,0,10"/>

                    <Separator Margin="0,10"/>

                    <Button x:Name="AddDelayButton"
                            Content="إضافة تأخير"
                            Style="{StaticResource ModernButton}"
                            Click="AddDelayButton_Click"
                            Margin="0,0,0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="المدة:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox x:Name="DurationTextBox" 
                                 Text="100" 
                                 Width="60"
                                 Style="{StaticResource ModernTextBox}"/>
                        <TextBlock Text="ms" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>

                    <Separator Margin="0,10"/>

                    <Button x:Name="ClearAllButton"
                            Content="مسح الكل"
                            Style="{StaticResource ModernButton}"
                            Click="ClearAllButton_Click"
                            Margin="0,0,0,10"/>

                    <Button x:Name="LoadPresetButton"
                            Content="تحميل نموذج"
                            Style="{StaticResource ModernButton}"
                            Click="LoadPresetButton_Click"/>
                </StackPanel>
            </Border>

            <!-- Sequence Editor -->
            <Border Grid.Column="1" 
                    Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="تسلسل الخطوات" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                        
                        <TextBlock x:Name="SequenceCountText"
                                   Text="(0 خطوات)"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="10,0,0,0"/>
                    </StackPanel>

                    <!-- Sequence List -->
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled">
                        <ItemsControl x:Name="SequenceItemsControl">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{StaticResource BackgroundBrush}"
                                            BorderBrush="{StaticResource BorderBrush}"
                                            BorderThickness="1"
                                            CornerRadius="6"
                                            Margin="0,0,0,5"
                                            Padding="10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Drag Handle -->
                                            <TextBlock Grid.Column="0" 
                                                       Text="⋮⋮" 
                                                       FontSize="16"
                                                       Foreground="{StaticResource TextSecondaryBrush}"
                                                       VerticalAlignment="Center"
                                                       Margin="0,0,10,0"/>

                                            <!-- Icon -->
                                            <Image Grid.Column="1" 
                                                   Source="{Binding IconPath}" 
                                                   Width="24" 
                                                   Height="24" 
                                                   Margin="0,0,10,0"/>

                                            <!-- Action Info -->
                                            <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding ActionName}"
                                                           FontWeight="SemiBold"
                                                           Foreground="{StaticResource TextBrush}"/>
                                                <TextBlock Text="{Binding DurationText}"
                                                           FontSize="10"
                                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                            </StackPanel>

                                            <!-- Duration Editor -->
                                            <StackPanel Grid.Column="3" 
                                                        Orientation="Horizontal" 
                                                        VerticalAlignment="Center"
                                                        Margin="10,0">
                                                <TextBox Text="{Binding Duration, Mode=TwoWay}" 
                                                         Width="50"
                                                         Style="{StaticResource ModernTextBox}"/>
                                                <TextBlock Text="ms" 
                                                           VerticalAlignment="Center" 
                                                           Margin="5,0,0,0"/>
                                            </StackPanel>

                                            <!-- Move Buttons -->
                                            <StackPanel Grid.Column="4" 
                                                        Orientation="Horizontal"
                                                        Margin="10,0">
                                                <Button Content="↑"
                                                        Width="25"
                                                        Height="25"
                                                        FontSize="12"
                                                        Style="{StaticResource ModernButton}"
                                                        Click="MoveUpButton_Click"
                                                        Tag="{Binding}"
                                                        Margin="0,0,2,0"/>
                                                <Button Content="↓"
                                                        Width="25"
                                                        Height="25"
                                                        FontSize="12"
                                                        Style="{StaticResource ModernButton}"
                                                        Click="MoveDownButton_Click"
                                                        Tag="{Binding}"/>
                                            </StackPanel>

                                            <!-- Delete Button -->
                                            <Button Grid.Column="5"
                                                    Content="×"
                                                    Width="25"
                                                    Height="25"
                                                    FontSize="14"
                                                    Background="Transparent"
                                                    BorderThickness="0"
                                                    Foreground="{StaticResource ErrorBrush}"
                                                    Click="DeleteButton_Click"
                                                    Tag="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Total Duration -->
                    <Border Grid.Row="2" 
                            Background="{StaticResource BackgroundBrush}"
                            BorderBrush="{StaticResource BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="10"
                            Margin="0,15,0,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="إجمالي المدة:" 
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Center"/>
                            <TextBlock x:Name="TotalDurationText"
                                       Text="0ms"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryBrush}"
                                       VerticalAlignment="Center"
                                       Margin="10,0,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="2" 
                Background="{StaticResource SurfaceBrush}" 
                BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,1,0,0"
                Padding="20,15">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="TestSequenceButton"
                        Content="اختبار التسلسل"
                        Style="{StaticResource ModernButton}"
                        Click="TestSequenceButton_Click"
                        Margin="0,0,10,0"/>
                
                <Button x:Name="SaveButton"
                        Content="حفظ"
                        Style="{StaticResource ModernButton}"
                        Click="SaveButton_Click"
                        Margin="0,0,10,0"/>
                
                <Button x:Name="CancelButton"
                        Content="إلغاء"
                        Style="{StaticResource ModernButton}"
                        Click="CancelButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>