{
  "Supabase": {
    "Url": "https://sr3h-auth-proxy-production.up.railway.app",
    "AnonKey": ""
  },
  "Authentication": {
    "OfflineGraceDays": 30,
    "AuthFileName": "auth.dat"
  },
  "Macro": {
    "DefaultKeySequenceDelay": 10,
    "DefaultActionDuration": 1,
    "DefaultActionDelay": 0,
    "MaxActionsPerMacro": 50
  },
  "Application": {
    "Version": "1.0.1",
    "MinimizeToTray": true,
    "StartWithWindows": false,
    "CheckForUpdates": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "EnableFileLogging": true,
    "LogFilePath": "logs/macro-app.log",
    "MaxLogFileSizeMB": 10,
    "MaxLogFiles": 5
  }
}